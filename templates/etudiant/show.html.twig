{% extends 'base.html.twig' %}

{% block title %}Etudiant{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Etudiant</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ etudiant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ etudiant.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ etudiant.email }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td  style="width: 10rem;height:5rem"><img class="img-thumbnail" src="{{asset('uploads/image/')}}{{ etudiant.image }}" alt="" > </td>

            </tr>

            <tr>
                <th>Telephone</th>
                <td>{{ etudiant.numeroDeTelephone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('etudiant_index') }}">Retour</a><br>

    <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">Modifier</a>

    {{ include('etudiant/_delete_form.html.twig') }}
</div>
{% endblock %}